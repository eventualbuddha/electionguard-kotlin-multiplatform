headers = \
  Hacl_Bignum64.h \
  Hacl_Bignum256.h \
  Hacl_Bignum4096.h \
  Hacl_HMAC.h \
  Hacl_HMAC_DRBG.h \
  Hacl_GenericField64.h \
  Hacl_IntTypes_Intrinsics.h \
  Hacl_Streaming_SHA2.h \
  Lib_RandomBuffer_System.h

# headerFilter = Hacl*.h
staticLibraries = libhacl.a
libraryPaths = build

# old-school flags on a Mac, new-school flags on Linux
linkerOpts.osx = -lhacl -Lhacllib/build
linkerOpts.linux = --library hacl --library-path hacllib/build

compilerOpts.osx = -Ilibhacl/include -O3
compilerOpts.linux = -Ilibhacl/include -O3
